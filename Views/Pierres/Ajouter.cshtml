@model Stones.Models.AjouterPierreViewModel

@{
    ViewData["Title"] = "Ajouter une pierre";
}

<h2>Ajouter une pierre</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="NomPierre"></label>
        <input asp-for="NomPierre" class="form-control" />
        <span asp-validation-for="NomPierre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdQualite">Qualité</label>
        <select asp-for="IdQualite" class="form-control" asp-items="ViewBag.Qualites">
            <option value="">-- Sélectionner une qualité --</option>
        </select>
        <span asp-validation-for="IdQualite" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdForme">Forme</label>
        <select asp-for="IdForme" class="form-control" asp-items="ViewBag.Formes">
            <option value="">-- Sélectionner une forme --</option>
        </select>
        <span asp-validation-for="IdForme" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ValeurCarat">Carat (en carats)</label>
        <input asp-for="ValeurCarat" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="ValeurCarat" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="PrixVente">Prix de vente</label>
        <input asp-for="PrixVente" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="PrixVente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantite">Quantité</label>
        <input asp-for="Quantite" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Quantite" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ajouter</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
