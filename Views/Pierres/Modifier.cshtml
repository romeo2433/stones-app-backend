@model Stones.Models.ViewModels.ModifierPierreViewModel

<form asp-action="Modifier" method="post">
    @Html.HiddenFor(m => m.Id_pierre)

    <div class="form-group">
        @Html.LabelFor(m => m.Nom_pierre)
        @Html.TextBoxFor(m => m.Nom_pierre, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Prix_vente)
        @Html.TextBoxFor(m => m.Prix_vente, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Quantite)
        @Html.TextBoxFor(m => m.Quantite, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>
